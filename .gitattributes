# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Configuration files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# SQL files
*.sql text eol=lf

# Docker files
Dockerfile text eol=lf
*.dockerfile text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.db binary
*.sqlite binary
*.sqlite3 binary
*.pkl binary
*.joblib binary
*.h5 binary
*.model binary
*.ckpt binary
*.pt binary
*.pth binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf

# Archives
*.zip binary
*.tar binary
*.gz binary
*.rar binary
*.7z binary

# Executables
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Logs
*.log text eol=lf

# Temporary files
*.tmp text eol=lf
*.temp text eol=lf
